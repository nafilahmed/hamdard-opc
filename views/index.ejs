		<script>
			var myName = document.querySelector("#handle");
			var myMessage = document.querySelector("#message");
			var sendMessage = document.querySelector("#send");
			var chatArea = document.querySelector("#output");
			var Vedio = document.querySelector("#myBtn");
			var ROOM = "chat3";
			var SIGNAL_ROOM = "signal_room3";
			
			
			io = io.connect();
			io.emit('ready', {"chat_room": ROOM, "signal_room": SIGNAL_ROOM});
			
			io.on('announce', function(data) {
				displayMessage(data.message);
			});
			
			io.on('message', function(data) {
				displayMessage(data.author + ": " + data.message);
			});

			io.on('window', function(data) {
				window.open("http://localhost:3000/video?q=3", "_blank", "toolbar=yes,scrollbars=yes,resizable=yes,top=500,left=500,width=400,height=400");
			});
			
			// io.on('window', function(data) {
			// 	window.open("http://localhost:3000/video?q=2", "_blank", "toolbar=yes,scrollbars=yes,resizable=yes,top=500,left=500,width=400,height=400");
			// });
			sendMessage.addEventListener('click', function(ev){
				io.emit('send', {"author":myName.value, "message":myMessage.value, "room":ROOM});
				ev.preventDefault();
			}, false);
			
			Vedio.addEventListener('click', function(ev){

				io.emit('win', {"author":myName.value, "message":"open new window on client", "room":ROOM});
				 window.open("http://localhost:3000/video?q=3", "_blank", "toolbar=yes,scrollbars=yes,resizable=yes,top=500,left=500,width=400,height=400");

				 // window.open("http://localhost:3000/video?peer_id=2", "_blank", "toolbar=yes,scrollbars=yes,resizable=yes,top=500,left=500,width=400,height=400");
				ev.preventDefault();
			}, false);

			function displayMessage(message) {
				chatArea.innerHTML = chatArea.innerHTML + "<br/>" + message;
			}
			
		</script>

